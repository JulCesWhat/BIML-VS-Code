{
    "name": "biml",
    "displayName": "Biml Language",
    "description": "Biml language suppport for VS Code",
    "version": "0.0.1",
    "publisher": "Varigence",
    "engines": {
        "vscode": "^1.19.0"
    },
    "icon": "./images/bimlIcon.png",
    "categories": [
        "Languages"
    ],
    "contributes": {
        "languages": [{
            "id": "bimlcs",
            "aliases": ["Biml", "biml"],
            "extensions": [".biml"],
            "configuration": "./biml.configuration.json"
        },
        {
            "id": "bimlvb",
            "aliases": ["Biml", "biml"],
            "firstLine" : "(\\<#@\\s+template\\s+language=\"VB\")|(\\<#@\\s+template\\s+language='VB')",
            "extensions": [".biml"],
            "configuration": "./biml.configuration.json"
        }],
        "grammars": [{
            "language": "bimlcs",
            "scopeName": "source.biml.cs",
            "path": "./syntaxes/bimlcs.tmLanguage.json"
        },
        {
            "language": "bimlvb",
            "scopeName": "source.biml.vb",
            "path": "./syntaxes/bimlvb.tmLanguage.json"
        }],
        "snippets": [
            {
				"language": "biml",
				"path": "./snippets/snippets.json"
			}
        ]
    }
}