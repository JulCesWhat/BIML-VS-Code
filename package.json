{
    "name": "biml",
    "displayName": "Biml Language",
    "description": "Biml language suppport for VS Code",
    "version": "0.0.1",
    "publisher": "Varigence",
    "engines": {
        "vscode": "*"
    },
    "icon": "./images/bimlIcon.png",
    "categories": [
        "Programming Languages",
        "Themes"
    ],
    "contributes": {
        "languages": [{
            "id": "bimlcs",
            "aliases": [],
            "extensions": [".bimlcs"],
            "configuration": "./bimlcs.configuration.json"
        }, {
            "id": "biml",
            "aliases": ["Biml", "biml"],
            "extensions": [".biml"],
            "configuration": "./biml.configuration.json"
        }],
        "grammars": [{
            "language": "bimlcs",
            "scopeName": "source.bimlcs",
            "path": "./syntaxes/bimlcs.tmLanguage.json"
        },{
            "language": "biml",
            "scopeName": "source.biml",
            "path": "./syntaxes/biml.tmLanguage.json"
        }],
        "themes": [
            {
                "label": "BIML Light",
                "uiTheme": "vs",
                "path": "./themes/bimlLight_plus.json"
            },{
                "label": "BIML Dark",
                "uiTheme": "vs-dark",
                "path": "./themes/bimlDark_plus.json"
            }
        ]
    }
}